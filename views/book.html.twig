<html>
    <head>
        <title>Book Page</title>
    </head>
    <body>
        <h1>{{ book.getTitle }}</h1>
        <a href="/">Home</a> <a href="/books_edit">Book list</a>
        <hr>

        <h2>by {% for writer in author %}
            {{ writer.getName }}</h2>
            {% endfor %}

            <form action="/books/{{ book.getId }}" method="post">
                <input name="_method" type="hidden" value="patch">

                <label for="title">Update the book title:</label>
                <input id="title" name="title" type="text">
                
         <form action="/books/{{ book.getId }}" method="post">
                <input name="_method" type="hidden" value="patch">

                <label for="name">Update the author name:</label>
                <input id="name" name="name" type="text">

                <button type="submit">Update</button>
            </form>


            <form action="/books/{{ book.getId }}" method="post">
                <input name="_method" type="hidden" value = "delete">

                <button type="submit">Delete this Book</button>
            </form>


    </body>
</html>
